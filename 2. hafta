#include <iostream>


#include <string>

using namespace std;

int main(){

    int tamsayi;
 double ondaliksayi;

cout << "bir tam sayi gir:";
cin >> tamsayi;


cout << "bir ondalık sayi girin:";
    cin >> ondaliksayi;

/* toplama çıkarma çarpma bölme ve mod alma işlemleri  */

double toplama = tamsayi +  ondaliksayi;
double fark    = tamsayi -  ondaliksayi;
double carpma  = tamsayi *  ondaliksayi;
double bolme   = tamsayi /  ondaliksayi;

int modsonuc   = tamsayi %  static_cast<int>(ondaliksayi);

/*static_cast<int>
ondalık sayının sadece tam sayı kısmını alır */

/* Ekranda cıkacak sonuclar */
cout << "\n hesaplama  sonuclar  \n";
cout << "Toplam: " << toplama << endl;
cout << "fark: " << fark << endl;
cout << "çarpma:" << carpma <<endl;
cout << "bölme: " << bolme  << endl;
cout << "mod: " << modsonuc << endl;
/* degişkenlerin bellekte kapladıgı bayt cınsinden hesaplama */
cout << "\n  degişkenlerin bellekte kapladıgı boyut \n";
cout << "int: " << sizeof(int) << " bayt" << endl;
cout << "double: " << sizeof(double) << " bayt" << endl;

}




